{
	"init": {
		"fullscreen": true,
		"width": 1440,
		"height": 900,
		"showDevTools": false,
		"useGPIO": true,
		"grayscaleMode": false,
		"preventScreensaver": true
	},
	"maxImageSize": "1500",
	"countdownLength": 4,
	"slideshow": {
		"enabled": true,
		"activatesAfterSeconds": 30,
		"secondsPerImages": 8
	},
	"gphoto2": {
		"capturetarget": 1,
		"keep": false
	},
	"content_dir": "../content",
	"webapp": {
		"password": "configwebapp",
		"maxDownloadImageSize": 1000,
		"enableRemoteRelease": true
	},
